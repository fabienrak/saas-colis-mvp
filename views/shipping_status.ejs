<!DOCTYPE html>
<html lang="en">
  
<head>
  <title><%= lang_data.Shipping_Status %></title>
    <%- include('./partials/meta'); -%>
  </head>
  <body>
    <%- include('./partials/header_sidebar'); -%> 

        <div class="page-body">
          <div class="container-fluid">
            <div class="page-title">
              <div class="row">
                <div class="col-sm-6">
                  <h3><%= lang_data.Miscellaneous %></h3>
                </div>
                <div class="col-sm-6">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/index"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item"><a href="/settings/shipping_status"><%= lang_data.List_Of_Shipping_Status %></a></li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
          <!-- Container-fluid starts-->
          <div class="container-fluid">
            <div class="row">
            
              <!-- Scroll - vertical dynamic Starts-->
              <div class="col-sm-12">
                <div class="card">
                  <div class="card-header pb-0 d-flex justify-content-between">
                    <h4><%= lang_data.List_Of_Shipping_Status %></h4>
                    <button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target="#status_toggle"><%= lang_data.Add_New_Status %></button>
                  </div>
                  <div class="card-body">
                    <div class="table-responsive theme-scrollbar">
                      <table class="display" id="basic-12" aria-label="table">
                        <thead>
                          <tr>
                            <th id="abc" class="d-none"></th>
                            <th id="abc"><%= lang_data.Status_Name %></th>
                            <th id="abc"><%= lang_data.Description %></th>
                            <th id="abc"><%= lang_data.Active %></th>
                            <th id="abc"><%= lang_data.Action %></th>
                          </tr>
                        </thead>
                        <tbody>
                          <% shipping_status_data.forEach((data) => { %>
                            
                            <tr>
                              <td class="d-none"></td>
                              <td><%= data.status_name %></td>
                              <td><%= data.status_details %></td>
                              <td>
                                <div class="form-check form-switch form-switch-md">
                                  <input class="form-check-input" type="checkbox" id="status_checkbox" name="status_checkbox" value="1" data-id="<%= data.id %>" <%= data.status_checkbox == '1' ? "checked" : "" %>>
                                </div>
                              </td>
                              <td> 
                                <ul class="action"> 
                                  <li class="edit"> <a data-bs-toggle="modal" data-bs-target="#edit_status_toggle" id="edit_shipping_status" data-id="<%= data.id %>" data-name="<%= data.status_name %>" data-details="<%= data.status_details %>"><i class="icon-pencil-alt"></i></a></li>
                                </ul>
                              </td>
                            </tr>
                          <% }) %>
                          
                        </tbody>
                        <tfoot>
                          <tr>
                            <th id="abc" class="d-none"></th>
                            <th id="abc"><%= lang_data.Status_Name %></th>
                            <th id="abc"><%= lang_data.Description %></th>
                            <th id="abc"><%= lang_data.Active %></th>
                            <th id="abc"><%= lang_data.Action %></th>
                          </tr>
                        </tfoot>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
              <!-- Scroll - vertical dynamic Ends-->
            </div>
          </div>
          <!-- Container-fluid Ends-->
        </div>

        <!-- add status modal-->
        
        <div class="modal fade" id="status_toggle" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenter" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title"><%= lang_data.Add_New_Status %></h5>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <form action="/settings/shipping_status" method="post">
                <div class="modal-body">
                  <div class="row g-3">
                    
                    <div class="col-12">
                      <label class="form-label"><%= lang_data.Status_Name %></label>
                      <input class="form-control" type="text" name="status_name" placeholder="Enter Status Name" required>
                    </div>

                    <div class="col-12">
                      <label class="form-label"><%= lang_data.Status_Details %></label>
                      <input class="form-control" type="text" name="status_details" placeholder="Enter Status Details" required>
                    </div>

                  </div>
                </div>
                <div class="modal-footer">
                  <button class="btn btn-secondary" type="button" data-bs-dismiss="modal"><%= lang_data.Close %></button>
                  <button class="btn btn-primary" type="submit"><%= lang_data.Save_changes %></button>
                </div>
              </form>
            </div>
          </div>
        </div>

        <!-- edit status modal-->

        <div class="modal fade" id="edit_status_toggle" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenter" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title"><%= lang_data.Edit_Status %></h5>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <form id="status_id" method="post">
                <div class="modal-body">
                  <div class="row g-3">
                    
                    <div class="col-12">
                      <label class="form-label"><%= lang_data.Status_Name %></label>
                      <input class="form-control" type="text" name="status_name" id="status_names" placeholder="Enter Status Name" required>
                    </div>

                    <div class="col-12">
                      <label class="form-label"><%= lang_data.Status_Details %></label>
                      <input class="form-control" type="text" name="status_details" id="status_detailss" placeholder="Enter Status Details" required>
                    </div>

                  </div>
                </div>
                <div class="modal-footer">
                  <button class="btn btn-secondary" type="button" data-bs-dismiss="modal"><%= lang_data.Close %></button>
                  <button class="btn btn-primary" type="submit"><%= lang_data.Save_changes %></button>
                </div>
              </form>
            </div>
          </div>
        </div>
        
        <%- include('./partials/footer'); -%>
        
    <%- include('./partials/script'); -%>

  </body>

</html>