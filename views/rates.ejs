<!DOCTYPE html>
<html lang="en">
  
<head>
  <title><%= lang_data.Rates %></title>
    <%- include('./partials/meta'); -%>
  </head>
  <body>
    <%- include('./partials/header_sidebar'); -%> 

        <div class="page-body">
          <div class="container-fluid">
            <div class="page-title">
              <div class="row">
                <div class="col-sm-6">
                  <h3><%= lang_data.Shipping_Rate_Settings %></h3>
                </div>
                <div class="col-sm-6">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/index"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item"><a href="/settings/rates"><%= lang_data.Rates %></a></li>
                  </ol>
                </div>
              </div>
            </div>
          </div>
          <!-- Container-fluid starts-->
          <div class="container-fluid">
            <div class="row">
             
              <!-- Scroll - vertical dynamic Starts-->
              <div class="col-sm-12">
                <div class="card">
                  <div class="card-header pb-0 d-flex justify-content-between">
                    <h4><%= lang_data.Rates %></h4>
                    <a href="/settings/add_rates" class="btn btn-pill btn-primary btn-air-primary"><%= lang_data.Add_New_Rates %></a>
                  </div>
                  <input type="hidden" id="rates_sym" value="<%= accessdata.data.site_currency %>">
                  <input type="hidden" id="rates_pla" value="<%= accessdata.data.currency_placement %>">
                  <input type="hidden" id="thousands_replace" value="<%= accessdata.data.thousands_separator %>">
                  <div class="card-body">
                    <div class="table-responsive theme-scrollbar">
                      <table class="display" id="basic-12" aria-label="table">
                        <thead>
                          <tr>
                            <th id="abc" class="d-none"></th>
                            <th id="abc"><%= lang_data.Origin %></th>
                            <th id="abc"><%= lang_data.State %></th>
                            <th id="abc"><%= lang_data.City %></th>
                            <th id="abc"><%= lang_data.Destination %> <%= lang_data.Country %></th>
                            <th id="abc"><%= lang_data.Destination %> <%= lang_data.State %></th>
                            <th id="abc"><%= lang_data.Destination %> <%= lang_data.City %></th>
                            <th id="abc"><%= lang_data.Rate_Price %></th>
                            <th id="abc"><%= lang_data.Action %></th>
                          </tr>
                        </thead>
                        <tbody>
                          <% rates_data.forEach((data) => { %>

                            <tr>
                              <td class="d-none"></td>
                              <td><%= data.counrty_origin %></td>
                              <td><%= data.state_name %></td>
                              <td><%= data.city_name %></td>
                              <td><%= data.destination_counrty %></td>
                              <td><%= data.destination_state %></td>
                              <td><%= data.destination_city %></td>
                              <td class="invosymbol"><%= data.rate_price %></td>
                              <td>
                                <ul class="action"> 
                                  <li class="edit"> <a href="/settings/edit_rates/<%= data.id %>"><i class="icon-pencil-alt"></i></a></li>
                                  <li class="delete"><a href="/settings/rates/delete/<%= data.id %>"><i class="icon-trash"></i></a></li>
                                </ul>
                              </td>
                            </tr>
                          
                          <% }) %>
                        </tbody>
                        <tfoot>
                          <tr>
                            <th id="abc" class="d-none"></th>
                            <th id="abc"><%= lang_data.Origin %></th>
                            <th id="abc"><%= lang_data.State %></th>
                            <th id="abc"><%= lang_data.City %></th>
                            <th id="abc"><%= lang_data.Destination %> <%= lang_data.Country %></th>
                            <th id="abc"><%= lang_data.Destination %> <%= lang_data.State %></th>
                            <th id="abc"><%= lang_data.Destination %> <%= lang_data.City %></th>
                            <th id="abc"><%= lang_data.Rate_Price %></th>
                            <th id="abc"><%= lang_data.Action %></th>
                          </tr>
                        </tfoot>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
              <!-- Scroll - vertical dynamic Ends-->
            </div>
          </div>
          <!-- Container-fluid Ends-->
        </div>
        
        <%- include('./partials/footer'); -%>
        
    <%- include('./partials/script'); -%>

  </body>

</html>