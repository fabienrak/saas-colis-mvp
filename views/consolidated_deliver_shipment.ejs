<!DOCTYPE html>
<html lang="en">
  
<head>
    <title><%= lang_data.consolidated %></title>
    <%- include('./partials/meta'); -%>
</head>
<body>
    <%- include('./partials/header_sidebar'); -%> 

        <div class="page-body">
            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="row">
                 
                    <!-- Scroll - vertical dynamic Starts-->
                    <div class="col-lg-12 col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <form action="/consolidated/deliver_shipment/<%= consolidated_data.id %>" method="post" enctype="multipart/form-data">
                                    <div class="row g-3">
                                    
                                        <h4><span class="font-danger"> <%= lang_data.Shipment_Tracking %> </span> | <%= consolidated_data.invoice %></h4>

                                        <hr>

                                        <div class="col-6">
                                            <label class="form-label"><%= lang_data.Ship_Date %></label>
                                            <div class="input-group left-radius"><span class="input-group-text" id="inputGroupPrepend"><i data-feather="calendar"></i></span>
                                              <input class="form-control digits" id="minMaxExample" type="text" name="date" placeholder="MM/DD/YYYY" required>
                                            </div>
                                        </div>

                                        <div class="col-6">
                                            <div class="col-form-label"><%= lang_data.Employee %> <i class="fa fa-taxi font-danger"></i></div>
                                            <select class="js-example-basic-single" name="assign_driver" required>
                                              <option value selected disabled>Search Driver</option>
                                              <% drivers_list.forEach((data) => { %>
                                                <option value="<%= data.id %>"> <%= data.first_name %> <%= data.last_name %></option>
                                              <% }) %>
                                            </select>
                                        </div>

                                        <div class="col-6">
                                            <label class="form-label"><%= lang_data.City_Or_Address %></label>
                                            <input class="form-control" type="text" placeholder="City or address" name="address" required>
                                        </div>

                                        <div class="col-6">
                                            <label class="form-label"><%= lang_data.Take_Photo %></label>
                                            <input class="form-control form-control-lg" type="file" name="image" id="deliver_shipment_img">
                                        </div>
                                        <input class="form-control form-control-sm" type="hidden" name="hidden_image" id="hidden_image" value="0">

                                        <hr class="mt-5">

                                        <div class="col-12">
                                            <div class="text-end">
                                                <button class="btn btn-square btn-primary btn-air-primary w-25 b-r-10" type="submit"><%= lang_data.Add_Shipment_Tracking %></button> 
                                            </div>
                                        </div>

                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Scroll - vertical dynamic Ends-->
                </div>
            </div>
            <!-- Container-fluid Ends-->
        </div>
        
    <%- include('./partials/footer'); -%>
        
    <%- include('./partials/script'); -%>

</body>

</html>